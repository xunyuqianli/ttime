<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a27459.ttime.UI.MainActivity">
    <LinearLayout
        android:id="@+id/linearLayout_select_buttons"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_line_thin"

        >
        <Button
            android:id="@+id/button_home"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginLeft="14sp"
            android:textSize="14sp"
            android:text="首页"
            android:onClick="ChangeFragment"
            />
        <Button
            android:id="@+id/button_news"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginLeft="14sp"
            android:textSize="15sp"
            android:text="咨询"
            android:onClick="ChangeFragment"
            />
        <Button
            android:id="@+id/button_search"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginLeft="14sp"
            android:textSize="15sp"
            android:text="表库"
            android:onClick="ChangeFragment"
            />
        <Button
            android:id="@+id/button_square"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginLeft="14sp"
            android:textSize="15sp"
            android:text="广场"
            android:onClick="ChangeFragment"
            />
        <Button
            android:id="@+id/button_me"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginLeft="14sp"
            android:textSize="15sp"
            android:text="我"
            android:onClick="ChangeFragment"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayout_select_buttons"
        >

    </FrameLayout>


</RelativeLayout>
